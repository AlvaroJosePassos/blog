<% unless comment.archived? %>
<p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
</p>

<p>
    <strong>Comment:</strong>
    <%= comment.body %>
</p>
<p>
    <%= button_to "Delete comment", [comment.article, comment], method: :delete,
    data: { turbo_confirm: 'operate.delete_confirm?'} %>
</p>
<% end %>
    